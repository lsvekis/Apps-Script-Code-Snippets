Setting Up Custom Menus Based on User Role
function onOpen() {

  var ui = SpreadsheetApp.getUi();

  var email = Session.getActiveUser().getEmail();

  if (email == â€˜admin@example.comâ€™) {

    ui.createMenu(â€˜Admin Menuâ€™)

        .addItem(â€˜Admin Taskâ€™, â€˜adminTaskâ€™)

        .addToUi();

  } else {

    ui.createMenu(â€˜User Menuâ€™)

        .addItem(â€˜User Taskâ€™, â€˜userTaskâ€™)

        .addToUi();

  }

}

function adminTask() {

  SpreadsheetApp.getUi().alert(â€˜Admin task executedâ€™);

}

function userTask() {

  SpreadsheetApp.getUi().alert(â€˜User task executedâ€™);

}

